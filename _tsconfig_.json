{
  "extends": "@tsconfig/react/tsconfig.json",
  "baseUrl": ".",
  "lib": [
    "ES2021",
    "dom",
    "DOM.Iterable",
    "ScriptHost",
    "ES2016.Array.Include"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "packages"
  ],
  "compilerOptions": {
    "jsx": "react",
    "skipLibCheck": true,
    "typeRoots": [
      "./src/types"
    ],
    "noEmit": false,
    "allowJs": true,
    "baseUrl": ".",
    "paths": {
      "shared/*": [
        "src/shared/*"
      ]
    }
  }
}