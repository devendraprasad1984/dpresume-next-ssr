{
  "name": "dpresume.com",
  "version": "0.1.0",
  "private": true,
  "sideEffects": false,
  "type": "module",
  "workspaces": {
    "packages": [
      "src/**",
      "packages/**"
    ]
  },
  "dependencies": {
    "jsonschema": "^1.4.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.6",
    "react-router-dom": "^5.3.0",
    "react-scripts": "^1.1.5",
    "redux": "^4.1.2",
    "redux-thunk": "^2.4.1",
    "web-vitals": "^1.1.2"
  },
  "scripts": {
    "bootstrap:hoistapp": "yarn lerna bootstrap",
    "start:lerna-app1": "lerna exec --scope @dp1/app1 -- yarn start1",
    "start:lerna-app": "lerna exec --scope @dp1/app1 -- yarn start",
    "start": "PORT=3004 react-scripts start",
    "build": "react-scripts build",
    "lint": "lint-staged",
    "test": "CI=false react-scripts test --verbose --env=jsdom --findRelatedTests=**/*test.{js,ts,tsx,jsx} -u",
    "testx": "CI=true react-scripts test --verbose --env=jsdom --watchAll=false --findRelatedTests=**/*test.{js,ts,tsx,jsx} --bail --forceExit -u",
    "testc": "npm run test -- --coverage",
    "eject": "react-scripts eject",
    "testg": "npm run testx",
    "command": "npm lint && npm testg",
    "prepare": "husky install"
  },
  "lint-staged": {
    "**/*.{js,jsx,ts,tsx}": [
      "eslint \"**/*.{js,jsx,ts,tsx}\" --fix",
      "prettier --check --write src",
      "git add -A ."
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "if [ $(git rev-parse --abbrev-ref HEAD) = master ]; then echo \"\n❌ Don't push to the master branch!\n\"; exit 1; fi"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@testing-library/jest-dom": "^4.2.4",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@wojtekmaj/enzyme-adapter-react-17": "^0.6.3",
    "babel-eslint": "^7.2.3",
    "babel-jest": "^26.6.0",
    "craco": "^0.0.3",
    "cross-env": "^7.0.3",
    "enzyme": "^3.11.0",
    "enzyme-to-json": "^3.6.2",
    "eslint-plugin-import": "^2.24.2",
    "husky": "^7.0.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.4.0",
    "prop-types": "^15.7.2"
  },
  "jest": {
    "snapshotSerializers": [
      "enzyme-to-json/serializer"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": -10
      }
    }
  }
}
